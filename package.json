{
    "name": "mymarkdownblog",
    "version": "1.0.0",
    "description": "A simple blog with TailwindCSS",
    "private": true,
    "scripts": {
        "build:css": "npx tailwindcss -i ./wwwroot/css/tailwind.css -o ./wwwroot/css/site.css --minify",
        "watch:css": "npx tailwindcss -i ./wwwroot/css/tailwind.css -o ./wwwroot/css/site.css --watch"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.0",
        "postcss": "^8.4.0",
        "autoprefixer": "^10.4.0"
    }
}
