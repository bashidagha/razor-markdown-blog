@page
@model BlogModel
@{
    ViewData["Title"] = "Blog";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Blog</h1>

            @if (Model.Posts.Any())
            {
                <div class="row">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a asp-page="/Post" asp-route-slug="@post.Slug" class="text-decoration-none">
                                            @post.Title
                                        </a>
                                    </h5>
                                    <p class="card-text text-muted">@post.Excerpt</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar"></i> @post.Date.ToString("MMMM dd, yyyy")
                                        </small>
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> @post.Author
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <a asp-page="/Post" asp-route-slug="@post.Slug" class="btn btn-primary">
                                        Read More <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <h4>No blog posts yet</h4>
                    <p class="text-muted">Check back soon for new posts!</p>
                </div>
            }
        </div>
    </div>
</div>