<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyMarkdownBlog</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyMarkdownBlog.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="bg-white border-b border-gray-200 shadow-sm">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-xl font-bold text-gray-900" asp-area="" asp-page="/Index">MyMarkdownBlog</a>
                    </div>
                    <div class="hidden md:flex md:space-x-8">
                        <a class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium"
                            asp-area="" asp-page="/Index">Home</a>
                        <a class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium"
                            asp-area="" asp-page="/Blog">Blog</a>
                        <a class="text-gray-700 hover:text-gray-900 px-3 py-2 rounded-md text-sm font-medium"
                            asp-area="" asp-page="/Series">Series</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <main role="main" class="py-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <p class="text-center text-sm text-gray-500">
                &copy; 2025 - MyMarkdownBlog
            </p>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>